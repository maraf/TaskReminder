@model TaskReminder.Core.Domain.TaskAttachment

@{
    ViewBag.Section = Model.ID == 0 ? "Vytvořit přílohu" : "Příloha: " + Model.Name;
}

@using (Html.BeginForm("attachment", "task", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    
    @Html.EditorFor(m => m.ID)
    @Html.EditorFor(m => m.FileName)
    @Html.EditorFor(m => m.ContentType)
    @Html.EditorFor(m => m.ContentLength)
    @Html.EditorFor(m => m.CreatorID)
    
    <div class="editor-folder">
        <div class="editor-item w800">
            <div class="editor-item">
                <div class="editor-label">
                    @Html.LabelFor(m => m.Name)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
        </div>
        <div class="clear"></div>
        
        <div class="editor-item w800">
            <div class="editor-item">
                <div class="editor-label">
                    @Html.LabelFor(m => m.Description)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.Description)
                    @Html.ValidationMessageFor(m => m.Description)
                </div>
            </div>
        </div>
        <div class="clear"></div>
        
        <div class="editor-item w300">
            <div class="editor-item">
                <div class="editor-label">
                    <label for="File">Soubor</label>
                </div>
                <div class="editor-field">
                    <input type="file" name="File" id="File" />
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    
    <div class="buttons">
        <input type="submit" value="Uložit" />

        @Html.ActionLink("Zpět na úkol", "edit")
    </div>
}
